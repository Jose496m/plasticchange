---
const { text } = Astro.props;
---

<section class="zoom shadow">
  <slot />
  <h4>{text}</h4>
</section>
<style>
  .zoom {
    transition: background-color 0.3s ease, transform 0.3s ease-in-out; /* Animation */
  }

  .zoom:hover {
    transform: scale(1.07); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
  }
  @media (min-width: 1025px) {
    section {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: var(--color-white-100);
      margin-top: -8rem;
      margin-bottom: var(--spacing-64);
      text-align: center;
      border-style: solid;
      border-radius: var(--spacing-16);
      border: 3px solid var(--color-green-100);
      padding-top: var(--spacing-24);
      gap: var(--spacing-64);
      justify-content: center;
      justify-content: flex-end;
      align-items: center;
      padding-bottom: var(--spacing-24);
      padding-inline: var(--spacing-8);
      max-width: 300px;
    }
  }
  @media (min-width: 600px) and (max-width: 1024px) {
    section {
      display: flex;
      flex-direction: column;
      height: 350px;
      background-color: var(--color-white-100);
      border-style: solid;
      border-radius: var(--spacing-16);
      border: 3px solid var(--color-green-100);
      padding-top: var(--spacing-8);
      text-align: center;
      justify-content: center;
      justify-content: space-around;
      padding-bottom: var(--spacing-24);
      align-items: center;
      gap: var(--spacing-16);
    }
    h4 {
      padding-inline: var(--spacing-16);
    }
  }
  @media (max-width: 599px) {
    section {
      display: flex;
      flex-direction: column;
      height: 250px;
      background-color: var(--color-white-100);
      border-style: solid;
      border-radius: var(--spacing-16);
      border: 3px solid var(--color-green-100);
      padding-top: var(--spacing-8);
      text-align: center;
      justify-content: center;
      align-items: center;
      gap: var(--spacing-16);
    }
    h4 {
      padding-inline: var(--spacing-4);
      padding-block: var(--spacing-16);
    }
  }
</style>
