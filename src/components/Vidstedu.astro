---
import VidsteduCard from "./Vidstedu_card.astro";
import { Image } from "astro:assets";
import julesweater1 from "../assets/images/julesweater1.svg";
import kolbe from "../assets/images/kolbe.svg";
import juletrae4 from "../assets/images/juletrae4.svg";
import julegave1 from "../assets/images/julegave1.svg";
---

<h2 class="vidste_du">Vidste du?</h2>
<section class="card_container">
  <VidsteduCard
    class="placering1"
    text="Danskere bruger 825 ton gavepapir hver evig eneste jul"
  >
    <Image class="kolbe" src={kolbe} alt="kolbe" />
  </VidsteduCard>
  <VidsteduCard
    class="placering2"
    text="Julegaver købt i en netbutik udenfor EU kan nemlig indeholde skadelige kemikalier"
  >
    <Image class="julegave" src={julegave1} alt="julehave" />
  </VidsteduCard>
  <VidsteduCard
    class="placering3"
    text="Et økologisk, ikke-gødet rødgran-juletræ, der er produceret lokalt, er det bedste"
  >
    <Image class="juletrae" src={juletrae4} alt="juletrae" />
  </VidsteduCard>
  <VidsteduCard
    class="placering4"
    text="95% af alle julesweatre indeholder plastik, og 40% bruges kun én gang"
  >
    <Image class="julesweater" src={julesweater1} alt="julesweater" />
  </VidsteduCard>
</section>

<style>
  @media (min-width: 900px) {
    h2 {
      margin-bottom: var(--spacing-24);
    }
    .card_container {
      display: flex;
      background-color: var(--color-red-100);
      width: 100%;
      padding-left: 200px;
      padding-right: var(--spacing-128);
      gap: var(--spacing-32);
      margin-left: var(--spacing-128);
      margin-right: var(--spacing-128);
      background-size: cover;
    }

    .vidste_du {
      margin-block: var(--spacing-32);
      text-align: center;
    }
    .julegave,
    .juletrae {
      width: 100px;
      margin-top: var(--spacing-24);
      margin-bottom: var(--spacing-64);
    }

    .kolbe {
      width: 70px;
      margin-top: var(--spacing-24);
      margin-bottom: var(--spacing-64);
    }
    .julesweater {
      width: 140px;
      margin-top: var(--spacing-24);
      margin-bottom: var(--spacing-64);
    }
  }

  @media (max-width: 500px) {
    .vidste_du {
      margin-block: var(--spacing-32);
      text-align: center;
    }
    .card_container {
      background-color: var(--color-red-100);
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
      gap: var(--spacing-16);
    }

    .placering1 {
      grid-row: 1;
      grid-column: 1;
    }

    .placering2 {
      grid-row: 1;
      grid-column: 2;
    }

    .placering3 {
      grid-row: 2;
      grid-column: 1;
    }

    .placering4 {
      grid-row: 2;
      grid-column: 2;
    }

    .julegave,
    .juletrae {
      width: 100px;
      margin-top: var(--spacing-24);
      margin-bottom: var(--spacing-64);
    }

    .kolbe {
      width: 70px;
      margin-top: var(--spacing-24);
      margin-bottom: var(--spacing-64);
    }
    .julesweater {
      width: 140px;
      margin-top: var(--spacing-24);
      margin-bottom: var(--spacing-64);
    }
  }
</style>
