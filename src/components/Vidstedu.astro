---
import VidsteduCard from "./Vidstedu_card.astro";
import { Image } from "astro:assets";
import julesweater1 from "../assets/images/julesweater1.svg";
import kolbe from "../assets/images/kolbe.svg";
import juletrae4 from "../assets/images/juletrae4.svg";
import julegave1 from "../assets/images/julegave1.svg";
---

<section class="card_container">
  <VidsteduCard text="Danskere bruger 825 ton gavepapir hver evig eneste jul">
    <img src="../assets/images/kolbe.svg" alt="kolbe" />
  </VidsteduCard>
  <VidsteduCard text="Julegaver købt i en netbutik udenfor EU kan nemlig indeholde skadelige kemikalier">
    <img src="../assets/images/julegave1.svg" alt="julegave" />
  </VidsteduCard>
  <VidsteduCard text="Et økologisk, ikke-gødet rødgran-juletræ, der er produceret lokalt, er det bedste">
    <img src="../assets/images/juletrae4.svg" alt="juletrae" />
  </VidsteduCard>
  <VidsteduCard text="95% af alle julesweatre indeholder plastik, og 40% bruges kun én gang">
    <img src="../assets/images/julesweater1.svg" alt="julesweater" />
  </VidsteduCard>
</section>

<style>
  .card_container {
    display: flex;

    margin: 12px;
  }
</style>
