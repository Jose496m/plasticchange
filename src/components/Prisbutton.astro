---
const { title, color } = Astro.props;
---

<section>
  <div class="circle" style={`--circle-color: ${color};`}>
    <span>{title}</span>
  </div>
</section>

<style>
  .circle:hover {
    background-color: var(--price-button-active-surface);
    color: var(--price-button-active-text);
    border: 2px solid var(--price-button-active-surface);
  }
  span {
    font-family: "rubiksemibold";
  }
  @media (min-width: 1025px) {
    .circle {
      cursor: pointer;
      width: 64px;
      height: 64px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--circle-color);
      border: 2px solid var(--price-button-default-border);
    }

    .circle[style*="--circle-color: var(--border-accent)"] {
      border: none;
      color: #ffffff;
    }
  }
  @media (max-width: 599px) {
    .circle {
      cursor: pointer;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--circle-color);
      border: 2px solid var(--price-button-default-border);
    }

    .circle[style*="--circle-color: var(--border-accent)"] {
      border: none;
      color: #ffffff;
    }
  }
  @media (min-width: 600px) and (max-width: 1024px) {
    .circle {
      cursor: pointer;
      width: 64px;
      height: 64px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--circle-color);
      border: 2px solid var(--price-button-default-border);
    }

    .circle[style*="--circle-color: var(--border-accent)"] {
      border: none;
      color: #ffffff;
    }
  }
</style>
