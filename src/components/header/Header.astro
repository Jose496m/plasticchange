---
import Menu from "./Menu.astro";
import FormHeader from "./FormHeader.astro";
const { titel, variant } = Astro.props;
---

<header class={variant}>
  <Menu class="menu" />
  <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>

  <dotlottie-player class="lottie" src="https://lottie.host/6f06c411-5712-434c-9d5f-25f6868687af/QvWilQdFV4.json" background="transparent" speed="0.5" style="width: 100%; height:100%;" loop autoplay></dotlottie-player>
  <div>
    <h1>{titel}</h1>
    <h3>Giv st√∏tte som en julegave</h3>
  </div>
  <FormHeader />
</header>

<style>
  h3 {
    color: var(--text-header);
  }
  /************ Mobile ************/
  @media (max-width: 599px) {
    header.landingpage.mobil {
      background-image: url(../../assets/images/header_mobil.png);
      background-size: cover;
      height: 100%;
    }
    .om_os.mobil {
      background-image: url(../../assets/images/om_os_mobile.png);
      background-size: cover;
    }
    h1 {
      padding-block: var(--spacing-128);
      padding-right: var(--spacing-64);
      padding-left: var(--spacing-24);
      margin-top: -18rem;
      animation: slide-in-left 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
      
  }

  /************ Tablet ************/
  @media (min-width: 600px) and (max-width: 1024px) {
    .landingpage.web {
      background-image: url(../../assets/images/header.png);
      background-size: cover;
    }
    .om_os.web {
      background-image: url(../../assets/images/om_os.png);
      background-size: cover;
    }
    h1 {
      padding-block: var(--spacing-128);
      padding-right: var(--spacing-252);
      padding-left: var(--spacing-24);
      margin-top: -30rem;
      animation: slide-in-left 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    }
  }

  /************ Web ************/
  @media (min-width: 1025px) {
    .landingpage.web {
      background-image: url(../../assets/images/header.png);
      background-size: cover;
    }
    .om_os.web {
      background-image: url(../../assets/images/om_os.png);
      background-size: cover;
    }
    h1 {
      padding-block: var(--spacing-128);
      padding-right: var(--spacing-252);
      padding-left: var(--spacing-24);
      margin-top: -45rem;
      animation: slide-in-left 2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    }
    h3 {
      padding-block: var(--spacing-128);
      padding-right: var(--spacing-252);
      padding-left: var(--spacing-24);
      margin-top: -15rem;
      animation: fade-in 1.2s cubic-bezier(0.39, 0.575, 0.565, 1) both;
    }
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes slide-in-left {
    0% {
      transform: translateX(-1000px);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>
