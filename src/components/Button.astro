---
const { title, link, variant } = Astro.props;
---

<div>
  <a class={variant} href={link}><span>{title}</span></a>
</div>

<style>
  a.primary:hover {
    background-position: 100% 0;
    moz-transition: all 0.4s ease-in-out;
    -o-transition: all 0.4s ease-in-out;
    -webkit-transition: all 0.4s ease-in-out;
    transition: all 0.4s ease-in-out;
  }
  .arrow:hover {
    background-position: 100% 0;
    moz-transition: all 0.4s ease-in-out;
    -o-transition: all 0.4s ease-in-out;
    -webkit-transition: all 0.4s ease-in-out;
    transition: all 0.4s ease-in-out;
    border: 3px solid transparent;
  }
  .secondary:hover {
    background-position: 100% 0;
    moz-transition: all 0.4s ease-in-out;
    -o-transition: all 0.4s ease-in-out;
    -webkit-transition: all 0.4s ease-in-out;
    transition: all 0.4s ease-in-out;
  }
  a {
    width: 100%;
    border: none;
    background: transparent;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }
  @media (min-width: 1025px) {
    a.primary {
      color: var(--button-primary-default-text);
      border-radius: var(--border-64);
      padding: 19px var(--spacing-44);
      cursor: pointer;
      position: relative;
      font-size: 22px;
      text-align: center;
      width: 180px;
      min-height: var(--spacing-64);
      transition: transform 0.2s ease;
      background-image: linear-gradient(to right, var(--color-red-300), #ef676c, #e24449, #e02e36);
      box-shadow: 0 5px 15px rgba(242, 97, 103, 0.4);
      background-size: 300% 100%;
      moz-transition: all 0.4s ease-in-out;
      -o-transition: all 0.4s ease-in-out;
      -webkit-transition: all 0.4s ease-in-out;
      transition: all 0.4s ease-in-out;
    }

    .arrow {
      color: var(--button-primary-default-text);
      border-radius: var(--border-64);
