---
import Stepbar from "./Stepbar.astro";
import Menu from "../header/Menu.astro";
import FormOverskrift from "./FormOverskrift.astro";
import Button from "../Button.astro";
import Input from "../Input.astro";
import Prisbutton from "../Prisbutton.astro";
import Formularcard from "../Formular/Formularcard.astro";
import { Image } from "astro:assets";
import pic1 from "../../assets/images/støttebeviskop.png";
import pic2 from "../../assets/images/støttebevis.png";
---

<Menu variant="form" />
<section>
  <div class="oval-container">
    <div class="oval-section section1"></div>
    <div class="oval-section section2"></div>
    <div class="oval-section section3"></div>
    <div class="oval-section section4"></div>
  </div>
</section>
<FormOverskrift titel="Giv støtte som en julegave." />
<section>
  <div class="kort flex">
    <Formularcard
      class="card"
      overskrift="Unikt emaljekrus fra Plastic Change"
      text="- inklusive et print-selv støttebevis. (Bemærk: Ramme medfølger ikke.)"
      pris="450.-"
    >
      <Image class="stoettebeviskop" src={pic1} alt="pic1" />
    </Formularcard>

    <Formularcard
      class="card"
      overskrift="Et fint print-selv-støttebevis"
      text="- der kan printes ud og lægges under juletræet (ramme medfølger ikke)."
      pris="Minimum 100.-"
    >
      <Image class="stoettebevis" src={pic2} alt="pic1" />
    </Formularcard>
  </div>
</section>
<div>
  <p class="ptag">
    Ønsker du at bidrage med en anden donation? <br />Gør det nemt herunder
  </p>
</div>

<div class="border spacing">
  <Input label="Vælg dit engangs beløb" placeholder="Andet beløb" />
</div>
<div class="buttons">
  <Button variant="secondary" title="← Tilbage" link="/formular/step1" />
  <Button variant="arrow" title="Næste → " link="/formular/step2" />
</div>

