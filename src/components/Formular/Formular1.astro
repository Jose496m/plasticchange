---
import Stepbar from "./Stepbar.astro";
---

<Stepbar />
<section>
  <h2>Giv en donation som gave</h2>
  <p>Er beløbet 300kr. eller over modtager du et krus som tak</p>
</section>
<section class="flex-container">
  <p>50</p>
  <p>75</p>
  <p>125</p>
  <p>300</p>
</section>
<section class="border">
  <p>Andet beløb</p>
</section>

<style>
  @media (min-width: 900px) {
    .flex-container {
      display: flex;
      gap: 50px;
      justify-content: center; /* Centrerer indholdet vandret */
    }
    h2,
    p {
      text-align: center;
    }
    .border {
      border: 1px solid black;
      width: 10%;
      margin: 0 auto; /* Centrerer elementet vandret */
    }
    .oval-container {
      position: relative;
      width: 200px;
      height: 25px;
      background-color: #fff;
      border-radius: 12.5px; /* Halvdelen af højden for at lave en oval */
      overflow: hidden;
      border: 1px solid black;
    }

    .oval-section {
      position: absolute;
      height: 100%;
    }

    .section1 {
      left: 0%;
      width: 20%;
      background-color: #db3463;
    }
    .section2 {
      left: 20%;
      width: 20%;
      border: 1px solid black;
    }
    .section3 {
      left: 40%;
      width: 20%;
      border: 1px solid black;
    }
    .section4 {
      left: 60%;
      width: 20%;
      border: 1px solid black;
    }

    .section5 {
      left: 80%;
      width: 20%;
      border: 1px solid black;
    }
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 500px) {
    .oval-container {
      position: relative;
      width: 200px;
      height: 15px;
      background-color: #fff;
      border-radius: 7.5px; /* Halvdelen af højden for at lave en oval */
      overflow: hidden;
      border: 1px solid black;
      margin-left: 75px;
    }

    .oval-section {
      position: absolute;
      height: 100%;
    }

    .section1 {
      left: 0%;
      width: 20%;
      background-color: #db3463;
    }
    .section2 {
      left: 20%;
      width: 20%;
      border: 1px solid black;
    }
    .section3 {
      left: 40%;
      width: 20%;
      border: 1px solid black;
    }
    .section4 {
      left: 60%;
      width: 20%;
      border: 1px solid black;
    }

    .section5 {
      left: 80%;
      width: 20%;
      border: 1px solid black;
    }
  }
</style>
