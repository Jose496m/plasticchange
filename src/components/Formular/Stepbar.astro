---
const {} = Astro.props;
---

<section>
  <div class="oval-container">
    <div class="oval-section section1 red"></div>
    <div class="oval-section section2"></div>
    <div class="oval-section section3"></div>
    <div class="oval-section section4"></div>
    <div class="oval-section section5"></div>
  </div>
</section>

<style>
  @media (max-width: 599px) {
    .red {
      background-color: var(--surface-brand);
    }
    section {
      margin-top: var(--spacing-44);
    }
    .oval-container {
      position: relative;
      width: 340px;
      height: 8px;
      overflow: hidden;
      border: var(--border-1) solid var(--border-dark);
    }

    .oval-section {
      position: absolute;
      height: 100%;
    }

    .section1 {
      left: 0%;
      width: 20%;
      border: 1px solid black;
      border-bottom-left-radius: var(--border-16);
      border-top-left-radius: var(--border-16);
    }
    .section2 {
      left: 20%;
      width: 20%;
      border: 1px solid black;
    }
    .section3 {
      left: 40%;
      width: 20%;
      border: 1px solid black;
    }
    .section4 {
      left: 60%;
      width: 20%;
      border: 1px solid black;
    }

    .section5 {
      left: 80%;
      width: 20%;
      border: 1px solid black;
      border-bottom-right-radius: var(--border-16);
      border-top-right-radius: var(--border-16);
    }
  }

  @media (min-width: 600px) and (max-width: 1024px) {
    .red {
      background-color: var(--surface-brand);
    }
    .oval-container {
      position: relative;
      width: 500px;
      height: 13px;
      border-radius: var(--border-16);
      overflow: hidden;
      border: var(--border-1) solid var(--border-dark);
    }

    .oval-section {
      position: absolute;
      height: 100%;
    }

    .section1 {
      left: 0%;
      width: 20%;
      border: 1px solid black;
      border-bottom-left-radius: var(--border-16);
      border-top-left-radius: var(--border-16);
    }
    .section2 {
      left: 20%;
      width: 20%;
      border: 1px solid black;
    }
    .section3 {
      left: 40%;
      width: 20%;
      border: 1px solid black;
    }
    .section4 {
      left: 60%;
      width: 20%;
      border: 1px solid black;
    }

    .section5 {
      left: 80%;
      width: 20%;
      border: 1px solid black;
      border-bottom-right-radius: var(--border-16);
      border-top-right-radius: var(--border-16);
    }
  }
  @media (min-width: 1025px) {
    .red {
      background-color: var(--surface-brand);
    }
    section {
      margin-top: var(--spacing-44);
      margin-bottom: var(--spacing-32);
    }
    .oval-container {
      position: relative;
      width: 1004px;
      height: 25px;
      border-radius: var(--border-16);
      overflow: hidden;
      border: var(--border-2) solid var(--border-dark);
    }

    .oval-section {
      position: absolute;
      height: 100%;
    }

    .section1 {
      left: 0%;
      width: 20%;
      border-bottom-left-radius: var(--border-16);
      border-top-left-radius: var(--border-16);
    }
    .section2 {
      left: 20%;
      width: 20%;
      border-left: 2px solid black;
    }
    .section3 {
      left: 40%;
      width: 20%;
      border-left: 2px solid black;
    }
    .section4 {
      left: 60%;
      width: 20%;
      border-left: 2px solid black;
    }

    .section5 {
      left: 80%;
      width: 20%;
      border-left: 2px solid black;
      border-bottom-right-radius: var(--border-16);
      border-top-right-radius: var(--border-16);
    }
  }
</style>
